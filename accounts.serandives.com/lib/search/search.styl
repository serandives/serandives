
#search input
  fixed: bottom -2px left
  z-index: 10
  font-size: 40px
  padding: 15px 30px
  font-family: inherit
  font-weight: 100
  border: none
  outline: none
  border-bottom: 5px solid #eee
  background: rgba(255,255,255, .95)
  width: 100%

#spinner
  fixed: top 50% left 50%
  margin-left: -12px
  z-index: 100

@media screen and (max-width: 450px)
  #search input
    font-size: 20px
